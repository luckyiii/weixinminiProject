<!--miniprogram/pages/detail/detail.wxml-->
<view class="detail">
  <block wx:if="{{!isHidden}}">
    <button wx:if="{{isFriend}}">已是好友</button>
    <button wx:else bindtap="handleAddFriend">添加好友</button>
  </block>
  

  <view class="detail-item">
    <text>头像：</text>
    <image src="{{detail.userPhoto}}"></image>
  </view>
  <view class="detail-item">
    <text>昵称：</text>
    <text>{{detail.nickName}}</text>
  </view>
  <view class="detail-item">
    <text>个性签名：</text>
    <text wx:if="{{detail.signature}}">{{detail.signature}}</text>
    <text wx:else class="empty">这个人很懒，什么都没留下~</text>
  </view>
  <view class="detail-item">
    <text>手机号：</text>
    <block wx:if="{{isFriend}}">
      <text>{{detail.phoneNumber}}</text>
      <call-phone wx:if="{{detail.phoneNumber}}" phoneNumber="{{detail.phoneNumber}}"/>
      <text wx:else class="empty">[空]</text>
    </block>
    <text class="onlyFriend" wx:else>仅好友可见</text>
  </view>
  <view class="detail-item">
    <text>微信号：</text>
    <block wx:if="{{isFriend}}">
      <text>{{detail.weixinNumber}}</text>
      <copy-weixin wx:if="{{detail.weixinNumber}}" weixinNumber="{{detail.weixinNumber}}"/>
      <text wx:else class="empty">[空]</text>
    </block>
    <text class="onlyFriend" wx:else>仅好友可见</text>
  </view>

</view>
